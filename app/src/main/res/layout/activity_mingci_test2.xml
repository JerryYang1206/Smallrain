<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawpage_bg"
    android:fitsSystemWindows="true"
    tools:context=".activity.MingciActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <com.easychange.admin.smallrain.views.CircleProgressBar
            android:id="@+id/circleProgressBar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            app:circleWidth="12dp"
            app:firstColor="#cbb399"
            app:secondColor="#00ceff"/>
        <com.easychange.admin.smallrain.views.IndicatorView
            android:id="@+id/ll_indicator"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/home_button3x"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/v_apple_bg"
    >
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/red_bird"
        />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp">
        <ImageView
            android:id="@+id/iv_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/n_blank_bg"/>
        <ImageView
            android:id="@+id/iv_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/n_blank_bg"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_root"
        android:layout_width="196dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="347dp"
    >
        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
        >
            <TextView
                android:id="@+id/tv_paint"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/painttext_bg"
                android:gravity="center"
                android:text="红"
                android:textColor="@color/paint_textcolor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"
            />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="95dp"
                android:background="@drawable/painttext_bg"
                android:gravity="center"
                android:text="小鸟"
                android:textColor="@color/paint_textcolor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"
            />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:id="@+id/ll_choose1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/n_small_bg"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_choose1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/apple_stroke"/>
            <TextView
                android:id="@+id/tv_choose1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="苹果"
                android:textColor="@color/paint_textcolor"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_choose2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/n_small_bg"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_choose2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/red_img"/>
            <TextView
                android:id="@+id/tv_choose2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="红"
                android:textColor="@color/paint_textcolor"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_choose3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/n_small_bg"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_choose3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/bird_bg"/>
            <TextView
                android:id="@+id/tv_choose3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="鸟"
                android:textColor="@color/paint_textcolor"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_choose4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/n_small_bg"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_choose4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/yellow_img"/>
            <TextView
                android:id="@+id/tv_choose4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="黄"
                android:textColor="@color/paint_textcolor"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>