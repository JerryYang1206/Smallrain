<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_bg3x"
    tools:context=".login.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="223dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30dip"
            android:paddingRight="30dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码已发送至+86"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:text="134 6780 3580"
                android:textColor="@color/black" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/longbutton3x"
            android:enabled="false"
            android:gravity="center"
            android:paddingBottom="10dip"
            android:text="60秒后重新获取"
            android:textColor="@color/text_code"
            android:textSize="14sp" />


        <com.xw.repo.fillblankview.FillBlankView
            android:inputType="number"
            android:layout_marginTop="20dip"
            android:id="@+id/edt_code"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp"
            app:blankCornerRadius="10dp"
            app:blankNum="6"
            app:blankStrokeColor="@color/text_tu"
            app:blankStrokeWidth="0.5dp"
            app:dotColor="@color/black"
            app:dotSize="5dp"
            app:isPasswordMode="false"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/img_home_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dip"
        android:layout_marginTop="22dip"
        android:src="@drawable/home_button3x" />
</RelativeLayout>